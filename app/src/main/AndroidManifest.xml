<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.smarto">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppBaseTheme">
        <activity
            android:name=".architecture.splash.SplashActivity"
            android:theme="@style/SplashStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".architecture.authentication.AuthActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".architecture.navigation.NavigationActivity" />
        <activity
            android:name=".architecture.add_task.AddTaskActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".architecture.registration.RegisterActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".architecture.contacts.addcontact.AddContactActivity"
            android:label="Search"/>
    </application>

</manifest>