<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.smarto">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme"
        android:name=".app.App">
        <activity
            android:name=".architecture.splash.SplashActivity"
            android:theme="@style/SplashStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".architecture.authentication.AuthActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".architecture.home.HomeActivity" />
        <activity android:name=".architecture.registration.RegisterActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

    </application>

</manifest>