<resources>

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="background">@color/primary_normal</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:text">Search</item>
    </style>

    <style name="SplashStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    
    <style name="DefaultEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/primary_normal</item>
        <item name="colorControlNormal">@color/secondary_normal</item>
    </style>

    <style name="data_check_box" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/secondary_normal</item>
        <item name="colorControlActivated">@color/secondary_normal</item>
    </style>

    <style name="black_check_box" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="add_group_alert" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/primary_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
