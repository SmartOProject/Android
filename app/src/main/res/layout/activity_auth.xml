<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.android.smarto.architecture.authentication.AuthActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_authentication_text"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:layout_marginTop="100dp"
        android:textColor="@color/black" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit_text_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:inputType="text"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:hint="@string/login_hint"
        app:met_floatingLabel="highlight"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        app:met_floatingLabel="highlight"/>

    <Button
        android:id="@+id/button_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_button"
        android:text="@string/button_login"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_screen_text_or"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/button_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="@string/sign_up"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:background="@drawable/sign_up_button"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_screen_text_under_sign_up"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/button_google"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:background="@drawable/google_button"
        android:text="@string/button_google"/>

    <Button
        android:id="@+id/button_facebook"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/facebook_button"
        android:text="@string/button_facebook"/>

    <Button
        android:id="@+id/button_remind"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/remind_password"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/remind_button"
        android:textSize="10sp"/>


</LinearLayout>
