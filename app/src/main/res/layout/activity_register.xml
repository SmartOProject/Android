<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.android.smarto.architecture.registration.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/loginButton">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/unknown_user"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <Button
            android:id="@+id/button_download_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/profile_image"
            android:layout_gravity="center"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/profile_image"
            android:background="@drawable/download_button"
            android:drawableStart="@drawable/ic_file_download_black_24dp" />

    </RelativeLayout>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:hint="@string/registration_email"
        app:met_floatingLabel="highlight"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        app:met_floatingLabel="highlight"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:drawableStart="@drawable/ic_https_black_24dp"
        android:hint="Confirm password"
        android:inputType="textPassword"
        app:met_floatingLabel="highlight"/>

    <TextView
        android:id="@+id/register_password_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/incorrect_password"
        android:textColor="@color/black"
        android:layout_marginLeft="64dp"
        android:textSize="12sp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/button_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/register_button"
        android:text="@string/button_sign_up_text"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

</LinearLayout>
