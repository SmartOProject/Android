<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:met_underlineColor="@color/orange"
        android:layout_above="@id/register_first_name"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:hint="@string/registration_email"
        app:met_floatingLabel="highlight" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_underlineColor="@color/orange"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/register_second_name"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:hint="@string/register_first_name"
        app:met_floatingLabel="highlight" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_second_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_underlineColor="@color/orange"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/register_password"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="@string/register_second_name"
        app:met_floatingLabel="highlight" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_underlineColor="@color/orange"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/register_password_helper"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:hint="@string/password_hint"
        app:met_floatingLabel="highlight" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_underlineColor="@color/orange"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/button_register"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="32dp"
        android:hint="@string/confirm_password_hint"
        app:met_floatingLabel="highlight" />

    <TextView
        android:id="@+id/register_password_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_confirm_password"
        android:text="@string/incorrect_password"
        android:textColor="@color/red"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/button_register"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/sign_up_button" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_image"/>

</RelativeLayout>