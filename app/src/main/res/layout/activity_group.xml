<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/groups_background"
    tools:context="com.im.smarto.ui.group.GroupActivity">

    <TextView
        android:id="@+id/single_group_name_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Group:"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/single_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/single_group_name_helper"
        android:layout_marginStart="16dp"
        android:text="Common"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_blue"
        app:fab_colorNormal="@color/white"
        app:fab_colorRipple="@color/primary_normal" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/task_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/single_group_name"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp" />

</RelativeLayout>