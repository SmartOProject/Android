<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_contact_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/add_contact_progress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        app:matProg_barColor="@color/primary_normal"
        app:matProg_progressIndeterminate="true" />

    <TextView
        android:id="@+id/add_contact_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_typing_the_query"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/grey"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/add_contact_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>